	<!-- 2차 카테고리 -->
	<select id="subCategoryList"
		resultType="com.library.basic.category.CategoryVO"
		parameterType="Integer">

		SELECT
		c_code,
		c_name,
		c_pcode
		FROM
		CATEGORY
		WHERE
		c_pcode =
		#{c_pcode}

	</select>




</mapper>