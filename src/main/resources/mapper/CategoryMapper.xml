<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.basic.category.CategoryMapper">

	<!-- 1차 카테고리 -->
	<select id="categoryAllList"
		resultType="com.library.basic.category.CategoryVO">

		SELECT
		c_code,
		c_name,
		c_pcode
		FROM
		CATEGORY
		WHERE
		c_pcode IS NULL


	</select>

